<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_0_5"
    android:gravity="center"
    android:orientation="vertical">

    <cn.demomaster.huan.quickdeveloplibrary.widget.QuickImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/quick_ic_add_image"
        app:quick_square="true" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minHeight="@dimen/dp_21"
        android:minWidth="@dimen/dp_21"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp"
        android:padding="@dimen/dp_3"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>