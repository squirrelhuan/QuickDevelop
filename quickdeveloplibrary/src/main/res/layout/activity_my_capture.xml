<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <cn.demomaster.qdzxinglibrary.ScanSurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <cn.demomaster.huan.quickdeveloplibrary.ui.ScanMakerView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dp_18">

        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_margin="@dimen/dp_6"
            android:padding="@dimen/dp_9"
            android:background="@drawable/btn_transparent_circle"
            app:srcCompat="@drawable/ic_light"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/iv_gallery"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_margin="@dimen/dp_6"
            android:padding="@dimen/dp_9"
            android:background="@drawable/btn_transparent_circle"
            app:srcCompat="@drawable/ic_menu"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>