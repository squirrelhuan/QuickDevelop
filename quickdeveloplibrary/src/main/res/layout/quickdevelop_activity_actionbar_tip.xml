<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="@color/transparent_light_cc">

    <cn.demomaster.huan.quickdeveloplibrary.view.loading.StateView
        android:id="@+id/sv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/quickdev_title_text_size"
        android:gravity="center_vertical" />
   <!-- <cn.demomaster.huan.quickdeveloplibrary.widget.ImageTextView
        android:id="@+id/it_actionbar_common_left"
        android:layout_width="@dimen/activity_actionbar_button_width"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/quickdev_title_text_size"
        android:gravity="center_vertical"
        android:src="@drawable/ic_warning_black_24dp" />-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:gravity="left|center_vertical"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="@dimen/quickdev_middle_text_size" />


    <cn.demomaster.huan.quickdeveloplibrary.widget.ImageTextView
        android:id="@+id/itv_retry"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:gravity="left|center_vertical"
        android:layout_gravity="right"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/cyan"
        android:textSize="@dimen/quickdev_small_text_size" />

</FrameLayout>
