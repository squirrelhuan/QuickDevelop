<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_dark_33">

    <LinearLayout
        android:id="@+id/container_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_3">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:background="@null"
                android:text="cancel"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10"/>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:text="confirm"
                android:textColor="#303F9F"
                android:textSize="@dimen/sp_10"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_108"
            android:background="@color/white"
            android:padding="@dimen/dp_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <cn.demomaster.huan.quickdeveloplibrary.view.pickview.LoopView
                    android:id="@+id/picker_hour"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:textSize="25sp"
                    app:canLoop="false"/>

                <cn.demomaster.huan.quickdeveloplibrary.view.pickview.LoopView
                    android:id="@+id/picker_minute"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_0_5"
                    android:layout_weight="1"
                    app:textSize="25sp"
                    app:canLoop="false"/>

                <cn.demomaster.huan.quickdeveloplibrary.view.pickview.LoopView
                    android:id="@+id/picker_meridian"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_0_5"
                    android:layout_weight="1"
                    app:textSize="25sp"
                    app:canLoop="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>