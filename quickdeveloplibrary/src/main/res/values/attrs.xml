<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoopView">
        <attr name="lineColor" format="color" />
        <attr name="topBottomTextColor" format="color" />
        <attr name="centerTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="canLoop" format="boolean" />
        <attr name="initPosition" format="integer" />
        <attr name="drawItemCount" format="integer" />
    </declare-styleable>

    <string-array name="tab_themt_titles">
        <item>@string/Components</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
        <item>6</item>
    </string-array>

    <attr name="qd_backgroundColor" format="color" />
    <attr name="qd_borderColor" format="color" />
    <attr name="qd_borderWidth" format="dimension" />
    <attr name="qd_isRadiusAdjustBounds" format="boolean" />
    <attr name="qd_radius" format="dimension" />
    <attr name="qd_radiusTopLeft" format="dimension" />
    <attr name="qd_radiusTopRight" format="dimension" />
    <attr name="qd_radiusBottomLeft" format="dimension" />
    <attr name="qd_radiusBottomRight" format="dimension" />
    <attr name="qd_btn_internal_width" format="dimension" />


    <attr name="QDButtonStyle" format="reference" />
    <declare-styleable name="QDButton">
        <attr name="qd_backgroundColor" />
        <attr name="qd_borderColor" />
        <attr name="qd_borderWidth" />
        <attr name="qd_isRadiusAdjustBounds" />
        <attr name="qd_radius" />
        <attr name="qd_radiusTopLeft" />
        <attr name="qd_radiusTopRight" />
        <attr name="qd_radiusBottomLeft" />
        <attr name="qd_radiusBottomRight" />
        <attr name="qd_btn_internal_width" />

    </declare-styleable>


    <!--**********************************************
        *                  btn                      *
        **********************************************-->
    <attr name="qd_btn_text_size" format="dimension" />
    <attr name="qd_btn_border_width" format="dimension" /><!--
    <attr name="qd_btn_internal_width" format="dimension"/>-->
    <!-- android 5.0一下不能再selector中用?attr,必须要整个drawable由使用者提供 -->
    <attr name="qd_btn_bg_color" format="color" />
    <attr name="qd_btn_border_color" format="color" />
    <attr name="qd_btn_text_color" format="color" />


    <declare-styleable name="QDTextViewPoint">
        <attr name="pointRadius" format="dimension" />
        <attr name="pointWidth" format="dimension" />

        <attr name="pointMargin" format="dimension" />
        <attr name="pointMarginLeft" format="dimension" />
        <attr name="pointMarginRight" format="dimension" />
        <attr name="pointMarginTop" format="dimension" />
        <attr name="pointMarginBottom" format="dimension" />

        <attr name="pointPadding" format="dimension" />
        <attr name="pointPaddingLeft" format="dimension" />
        <attr name="pointPaddingRight" format="dimension" />
        <attr name="pointPaddingTop" format="dimension" />
        <attr name="pointPaddingBottom" format="dimension" />

        <attr name="pointBackgroundColor" format="color" />
        <attr name="pointText" format="string" />
        <attr name="pointTextColor" format="color" />

        <attr name="pointTextSize" format="dimension" />
        <attr name="pointGravity" format="enum">
            <enum name="leftTop" value="0" />
            <enum name="leftBottom" value="1" />
            <enum name="rightTop" value="2" />
            <enum name="rightBottom" value="3" />
        </attr>
        <attr name="showPoint" format="boolean" />
        <attr name="hollowOut" format="boolean" />
        <attr name="hollowColor" format="color" />
        <attr name="hollowRadius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="SlidingLayout">
        <!--当菜单被折叠时，显示的高度-->
        <attr name="scroll_marginTop" format="dimension" />
        <attr name="scroll_marginBottom" format="dimension" />
        <attr name="initialState" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
            <enum name="anchored" value="2" />
            <enum name="hidden" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="SlidingUpPanelLayout">
        <!--当菜单被折叠时，显示的高度-->
        <attr name="umanoPanelHeight" format="dimension" />
        <!--当菜单被折叠时，显示的高度百分比-->
        <attr name="umanoPanelHeight2" format="float" />
        <attr name="umanoShadowHeight" format="dimension" />
        <!--当菜单在滑动的时候，主页面一起移动的视觉偏差。-->
        <attr name="umanoParallaxOffset" format="dimension" />
        <!--当菜单在滑动的时候，主页面一起移动的视觉偏差。-->
        <attr name="umanoParallaxOffset2" format="float" />
        <!--遮罩颜色变化-->
        <attr name="umanoFadeColor" format="color" />
        <attr name="umanoFlingVelocity" format="integer" />
        <attr name="umanoDragView" format="reference" />
        <attr name="umanoScrollableView" format="reference" />
        <!--意思是菜单是否要覆盖到主页面之上：
        如果是false，相当于LinearLayout，主页面在上，菜单在下
        如果是true，相当于FrameLayout-->
        <attr name="umanoOverlay" format="boolean" />
        <attr name="umanoClipPanel" format="boolean" />
        <!--自定义的菜单展开的锚点比例。值为0-1之间的小数，非手动拖拽菜单的情况下（例如点击）只会展开到这个锚点的比例。-->
        <attr name="umanoAnchorPoint" format="float" />
        <!--自定义的菜单顶部锚点。值为0-1之间的小数，拖拽菜单的情况下只会展开到这个锚点的比例。-->
        <attr name="umanoTopAnchorPoint" format="float" />
        <!--自定义的菜单底部锚点。值为0-1之间的小数，拖拽菜单的情况下只会展开到这个锚点的比例。-->
        <attr name="umanoBottomAnchorPoint" format="float" />
        <attr name="umanoInitialState" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
            <enum name="anchored" value="2" />
            <enum name="hidden" value="3" />
        </attr>
        <attr name="umanoScrollInterpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="PushCardLayout">
        <attr name="nest_scroll_header_view" format="reference" />
        <attr name="nest_scroll_footer_view" format="reference" />
        <attr name="nest_scroll_content" format="reference" />

        <attr name="scroll_model" format="enum">
            <enum name="no_scroll" value="-1" />
            <enum name="only_scroll" value="0" />
            <enum name="TopAndBottom" value="1" />
            <enum name="Top" value="2" />
            <enum name="Bottom" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="VisibleLayout">
        <attr name="hide_with_child" format="boolean" />
        <attr name="start_from" format="enum">
            <enum name="none" value="-1" />
            <enum name="left" value="3" />
            <enum name="top" value="48" />
            <enum name="right" value="5" />
            <enum name="bottom" value="80" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="circle_background_padding" format="dimension" />
        <attr name="circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="drawColor" format="color" />
    </declare-styleable>

    <declare-styleable name="Loadlayout">
        <attr name="loadlayout" format="integer" />
    </declare-styleable>

    <declare-styleable name="MyRadioButton">
        <attr name="srcLeft" format="reference" />
        <attr name="srcTop" format="reference" />
        <attr name="srcRight" format="reference" />
        <attr name="srcBottom" format="reference" />
        <attr name="srcHeight" format="dimension" />
        <attr name="srcWidth" format="dimension" />
        <attr name="srcMargin" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MyRatingBar">
        <attr name="foregroundColor" format="color" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="QDNestedScrollParent">
        <attr name="topView" format="reference" />
        <attr name="scrollView" format="reference" />
        <!--距离顶部最大距离-->
        <attr name="headerHeightMax" format="dimension" />
        <!--距离顶部最小距离-->
        <attr name="headerHeightMin" format="dimension" />
        <!--距离顶部最大距离 参考指定view的高度-->
        <attr name="headerHeightMaxAlign" format="reference" />
        <!--距离顶部最小距离 参考指定view的高度-->
        <attr name="headerHeightMinAlign" format="reference" />
    </declare-styleable>
    <declare-styleable name="TabCursorView">
        <!--对齐视图-->
        <attr name="alignView" format="reference" />
        <!--游标宽度-->
        <attr name="cursorWidth" format="dimension" />
        <!--对齐视图-->
        <attr name="cursorColor" format="color" />
    </declare-styleable>


    <declare-styleable name="QDViewPager">
        <attr name="canScroll" format="boolean" />
    </declare-styleable>
</resources>