<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.demomaster.huan.quickdevelop">


    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"
        tools:ignore="MockLocation,ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- android 9.0上使用前台服务，需要添加权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 震动权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera" /> <!-- 使用照相机权限 -->
    <uses-feature android:name="android.hardware.camera.autofocus" /> <!-- 自动聚焦权限 -->
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/quickdevelop_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/quickdevelop_ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/StartAppTheme">


        <!-- 声明service组件 -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
        </service>

        <!-- AK鉴权 -->
        <!-- meta-data需要写在application中 -->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="AuMPh0zN8c1tUwRPGY37pmblqEunsjAO" />  <!-- http://lbsyun.baidu.com/apiconsole/key -->


        <!-- android:theme="@style/SplashTheme" 添加给启动页来显示启动背景  QDMainFragmentActivity-->
        <activity
            android:name=".QDMainFragmentActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.sample.RegisterActivity" /> <!-- <activity android:name=".sample.CaptureActivity" /> -->
        <activity android:name=".activity.sample.RecycleActivity" />
        <activity android:name=".activity.sample.PickActivity" />
        <activity android:name=".activity.sample.IDCardActivity" />
        <activity android:name="cn.demomaster.huan.quickdeveloplibrary.camera.idcard.CameraIDCardActivity" />
        <activity android:name="cn.demomaster.huan.quickdeveloplibrary.camera.idcard.IDCardActivity" /> <!-- android:screenOrientation="landscape" -->
        <activity android:name=".activity.sample.CsqliteActivity" />
        <activity android:name=".activity.sample.component.QDialogActivity" />
        <activity android:name=".activity.sample.TabMenuActivity" />
        <activity android:name=".activity.sample.PictureSelectActivity" />
        <activity android:name=".activity.sample.component.LoadingActivity" />
        <activity android:name=".activity.sample.CenterHorizontalActivity" />
        <activity android:name=".activity.sample.TestActivity" />
        <activity android:name=".fragment.helper.location.LocationActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="cn.demomaster.huan.quickdeveloplibrary.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_path" />
        </provider>

        <activity android:name=".MainActivity" />
        <activity
            android:name=".activity.sample.component.ToggleButtonActivity"
            android:label="tooglebutton" />
        <activity android:name=".activity.sample.actionbar.ActionBarActivity" />
        <activity android:name=".activity.sample.actionbar.ActionBarTipActivity" />
        <activity android:name=".activity.sample.component.RatingBarActivity" />
        <activity android:name=".activity.sample.component.QDActionDialogActivity" />
        <activity android:name=".activity.sample.fragment.BaseFragmentActivity" />

        <activity android:name=".fragment.helper.serialport.sample.SerialportMain"/>
        <activity android:name=".fragment.helper.serialport.sample.ConsoleActivity"/>
        <activity android:name=".fragment.helper.serialport.sample.LoopbackActivity"/>
        <activity android:name=".fragment.helper.serialport.sample.Sending01010101Activity"/>
        <activity android:name=".fragment.helper.serialport.sample.SerialPortActivity"/>
        <activity android:name=".fragment.helper.serialport.sample.SerialPortPreferences"/>

        <service
            android:name=".service.SimpleService"
            android:enabled="true"
            android:process=":guard" /> <!-- Message Service -->
        <service android:name=".service.MessageService" />
        <service
            android:name=".service.GuardService"
            android:enabled="true"
            android:exported="true"
            android:priority="1000"
            android:process=":guard" />

        <receiver
            android:name=".receiver.ServiceReceiver"
            android:enabled="true"
            android:exported="true"
            android:priority="1000">
            <intent-filter>
                <action android:name="cn.demomaster.huan.quickdevelop.service" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name=".service.UploadFilesIntentService" />
    </application>

</manifest>