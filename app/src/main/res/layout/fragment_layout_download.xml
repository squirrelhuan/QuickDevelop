<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
                            android:id="@+id/btn_download_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="系统下载"/>

                        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
                            android:id="@+id/btn_download_thread"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="查看下载中"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="http://web.baekteori.com:18088/mange-web/app/app-release.apk"/>

                        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
                            android:id="@+id/btn_upload_file"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="上传文件"/>

                      <!--  <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
                            android:id="@+id/btn_error_buggly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_font"/>
-->
                </LinearLayout>
        </ScrollView>

</RelativeLayout>
