<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_exe_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ps" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_exe_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ps |grep" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_exe_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="强制开启全屏模式"
            android:textColor="@color/blue"
            android:textSize="20sp" />


        <!--<EditText
            android:id="@+id/et_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="clear" />
    </LinearLayout>


       <!-- <TextView
            android:id="@+id/tv_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="$"/>-->
        <EditText
            android:id="@+id/et_console"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="10dp"
            android:gravity="left"
            android:textSize="14sp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="ls"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="@color/orange"
            app:srcCompat="@drawable/ic_send_black_24dp"/>
    </LinearLayout>


   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
        <cn.demomaster.huan.quickdeveloplibrary.widget.QDEditView
            android:id="@+id/qet_console"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@color/black"/>
    <!--</ScrollView>-->
    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
</RelativeLayout>
