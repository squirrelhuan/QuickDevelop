<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <EditText
               android:id="@+id/et_system_none"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:hint="我是系统输入法"/>

            <EditText
                android:id="@+id/et_system_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:hint="我是系统输入法(number)"/>

            <EditText
                android:id="@+id/et_system_numberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="numberPassword"
                android:hint="我是系统输入法(numberPassword)"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="内置键盘"/>

            <EditText
                android:id="@+id/et_custom_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="自定义输入法" />

            <EditText
                android:id="@+id/et_custom_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:hint="自定义输入法(number)"/>

            <EditText
                android:id="@+id/et_custom_numberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="numberPassword"
                android:hint="自定义输入法(numberPassword)"/>

            <EditText
                android:id="@+id/et_custom_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="phone"
                android:hint="自定义输入法(phone)"/>

            <EditText
                android:id="@+id/et_custom_textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="textEmailAddress"
                android:hint="自定义输入法(textEmailAddress)"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
