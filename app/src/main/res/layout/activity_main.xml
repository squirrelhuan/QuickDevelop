<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gudaimeizi"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <cn.demomaster.huan.quickdeveloplibrary.widget.button.ToggleButton
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="150dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="Hello World!" />
            <Button
                android:id="@+id/btn_action_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="actionTip" />
            <Button
                android:id="@+id/btn_center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="横向滚动居中" />
            <Button
                android:id="@+id/btn_loading_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载动画" />
            <Button
                android:id="@+id/btn_tab_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TabMenu" />

            <Button
                android:id="@+id/btn_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialog" />

            <Button
                android:id="@+id/btn_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DBHelper" />

            <Button
                android:id="@+id/btn_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描" />

            <Button
                android:id="@+id/btn_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间日期选择器" />

            <Button
                android:id="@+id/btn_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照" />

            <Button
                android:id="@+id/btn_simple_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片选择器" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_ac_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示导航" />

                <Button
                    android:id="@+id/btn_ac_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐藏导航" />
                <Button
                    android:id="@+id/btn_ac_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐藏导航(不占状态栏)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <Button
                android:id="@+id/btn_ac_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="叠加导航" />

            <Button
                android:id="@+id/btn_ac_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="叠加导航(不占状态栏)" />

                <Button
                    android:id="@+id/btn_ac_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="透明导航" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白色导航" />

                <Button
                    android:id="@+id/btn_color_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绿色导航" />

                <Button
                    android:id="@+id/btn_color_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄色导航" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_color_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红色导航" />

                <Button
                    android:id="@+id/btn_color_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灰色导航" />

                <Button
                    android:id="@+id/btn_color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黑色导航" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_change_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更换背景" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>