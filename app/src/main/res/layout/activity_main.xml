<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gudaimeizi"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/ll_layout"
    tools:context=".MainActivity">

    <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="150dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DBHelper"/>

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描"/>

    <Button
        android:id="@+id/btn_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间日期选择器"/>

    <Button
    android:id="@+id/btn_photo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="拍照"/>
    <Button
        android:id="@+id/btn_ac_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示导航"/>
    <Button
        android:id="@+id/btn_ac_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏导航"/>
    <Button
        android:id="@+id/btn_ac_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="叠加导航"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白色导航"/>

        <Button
        android:id="@+id/btn_color_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绿色导航"/>
        <Button
            android:id="@+id/btn_color_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄色导航"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红色导航"/>
        <Button
            android:id="@+id/btn_color_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灰色导航"/>

        <Button
            android:id="@+id/btn_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑色导航"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_change_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更换背景"/>

</LinearLayout>