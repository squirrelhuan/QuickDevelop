<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="日期选择器" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/timepick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="时间选择器" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/timepick2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="日期时间选择器" />
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="位置选择器" />
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_launge_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="语言选择器" />
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/common_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="通用选择器" />

        <!--<attr name="lineColor" format="color"/>-->
        <!--<attr name="topBottomTextColor" format="color"/>-->
        <!--<attr name="centerTextColor" format="color"/>-->
        <!--<attr name="textSize" format="dimension"/>-->
        <!--<attr name="canLoop" format="boolean"/>-->
        <!--<attr name="initPosition" format="integer"/>-->
        <!--<attr name="drawItemCount" format="integer"/>-->
        <cn.demomaster.huan.quickdeveloplibrary.view.pickview.LoopView
            android:id="@+id/loop_view"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_below="@+id/demo"
            app:canLoop="true"
            app:centerTextColor="#ff000000"
            app:drawItemCount="7"
            app:initPosition="3"
            app:lineColor="@color/white"
            app:textSize="25sp"
            app:topBottomTextColor="@color/white" />

        <cn.demomaster.huan.quickdeveloplibrary.view.pickview.LoopView2
            android:id="@+id/loop_view2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loop_view"
            app:canLoop="true"
            app:centerTextColor="#ff000000"
            app:drawItemCount="5"
            app:initPosition="3"
            app:lineColor="@color/white"
            app:textSize="25sp"
            app:topBottomTextColor="@color/white" />
    </LinearLayout>
</ScrollView>