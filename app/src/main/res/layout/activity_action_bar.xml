<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/ll_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ac_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示导航" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ac_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏导航" />
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ac_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏导航(不占状态栏)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ac_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="叠加导航" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ac_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="叠加导航(不占状态栏)" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ac_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="透明导航" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白色导航" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_color_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色导航" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_color_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄色导航" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红色导航" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_color_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灰色导航" />

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑色导航" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景色"/>

        <SeekBar
            android:id="@+id/sb_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_NORMAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NORMAL"/>
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_NO_ACTION_BAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO_ACTION_BAR"/>
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ACTION_STACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTION_STACK"/>
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QDButton
            android:id="@+id/btn_ACTION_STACK_NO_STATUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTION_STACK_NO_STATUS"/>
    </LinearLayout>
    <!--
    <cn.demomaster.huan.quickdeveloplibrary.base.tool.actionbar.ActionBarLayoutView
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </cn.demomaster.huan.quickdeveloplibrary.base.tool.actionbar.ActionBarLayoutView>-->


</LinearLayout>