<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".ui.activity.sample.component.ToggleButtonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QuickToggleButton
            android:id="@+id/tooglebutton"
            android:layout_width="90dp"
            android:layout_height="60dp"/>
        <cn.demomaster.huan.quickdeveloplibrary.widget.button.QuickToggleButton
            android:id="@+id/tooglebutton2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            app:quick_checked="false"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控件大小" />

    <SeekBar
        android:id="@+id/sb_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="颜色" />

    <SeekBar
        android:id="@+id/sb_progress_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>