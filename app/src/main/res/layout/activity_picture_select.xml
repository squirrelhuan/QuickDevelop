<?xml version="1.0" encoding="utf-8"?>
<cn.demomaster.huan.quickdeveloplibrary.widget.QDScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.sample.PictureSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.demomaster.huan.quickdeveloplibrary.helper.simplepicture.view.SimplePictureGallery
            android:id="@+id/ga_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow"/>

        <cn.demomaster.huan.quickdeveloplibrary.helper.simplepicture.view.SimplePictureGallery
            android:id="@+id/ga_picture2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"/>

        <cn.demomaster.huan.quickdeveloplibrary.helper.simplepicture.view.SimplePictureGallery
            android:id="@+id/ga_picture3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"/>

        <cn.demomaster.huan.quickdeveloplibrary.helper.simplepicture.view.SimplePictureGallery
            android:id="@+id/ga_picture4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"/>

    </LinearLayout>
</cn.demomaster.huan.quickdeveloplibrary.widget.QDScrollView>